{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "types": [],
    "jsx": "react",
    "noEmit": false,
    "baseUrl": ".",
    "paths": {
      "@drawease/app/*": ["packages/app/src/*"],
      "@drawease/components/*": ["packages/components/src/*"],
      "@drawease/board/*": ["packages/board/src/*"],
      "@drawease/utils/*": ["packages/utils/src/*"],
      "@drawease/*": ["packages/*/src"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
