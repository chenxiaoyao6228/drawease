{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "types": [],
    "jsx": "react",
    "noEmit": false,
    "baseUrl": ".",
    "paths": {
      "@drawease/app/*": [
        "packages/app/src/*"
      ],
      "@drawease/components/*": [
        "packages/components/src/*"
      ],
      "@drawease/core/*": [
        "packages/core/src/*"
      ],
      "@drawease/utils/*": [
        "packages/utils/src/*"
      ],
      "@drawease/*": [
        "packages/*/src"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}